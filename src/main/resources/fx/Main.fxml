<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<!--https://www.oracle.com/technetwork/java/javase/downloads/javafxscenebuilder-1x-archive-2199384.html-->

<BorderPane fx:id="main" prefHeight="720.0" prefWidth="1280.0" styleClass="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sunlight.client.gui.fx.controllers.MainWindowController">
    <top>
        <GridPane>
            <gridLinesVisible>true</gridLinesVisible>
            <columnConstraints>
                <ColumnConstraints prefWidth="120.0" />
                <ColumnConstraints prefWidth="750" />
                <ColumnConstraints prefWidth="200.0" />
                <ColumnConstraints prefWidth="100.0" />
                <ColumnConstraints prefWidth="100.0" />
                <ColumnConstraints prefWidth="100.0" />
            </columnConstraints>

            <Label text="%packageSN" textAlignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="packageSNField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <Label fx:id="progressField" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <Button prefHeight="4.0" prefWidth="200.0" text="%startPackingButton" GridPane.columnIndex="3" GridPane.rowIndex="0" focusTraversable="false" onMouseClicked="#onBtnNewPackingClicked"/>
            <Button prefHeight="4.0" prefWidth="200.0" text="%finishPackingButton" GridPane.columnIndex="4" GridPane.rowIndex="0" focusTraversable="false" onMouseClicked="#onBtnClosePackingClicked"/>
            <Button prefHeight="4.0" prefWidth="200.0" text="%unpackingButton" GridPane.columnIndex="5" GridPane.rowIndex="0" focusTraversable="false" onMouseClicked="#onBtnUnPackingClicked"/>

            <Label text="%wipno" textAlignment="RIGHT" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="wipnoField" onKeyPressed="#onWipFieldKeyPress" GridPane.columnIndex="1" GridPane.columnSpan="5" GridPane.rowIndex="1" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </top>
    <center>
        <TableView fx:id="tableView" onMousePressed="#onTableMousePressed" onKeyPressed="#onTableKeyPressed" prefHeight="640.0">
            <columns>
                <TableColumn fx:id="columnSequece" prefWidth="100.0" text="%columnSequence">
                    <cellValueFactory>
                        <PropertyValueFactory property="sequence" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnName" prefWidth="400.0" text="%columnName">
                    <cellValueFactory>
                        <PropertyValueFactory property="wipno" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnDescription" prefWidth="100.0" text="%columnDescription">
                    <cellValueFactory>
                        <PropertyValueFactory property="status" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnText" prefWidth="400.0" text="%columnText">
                    <cellValueFactory>
                        <PropertyValueFactory property="text" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnId" prefWidth="300.0" text="%columnId">
                    <cellValueFactory>
                        <PropertyValueFactory property="transactionId" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="columnInterval" prefWidth="100.0" text="%columnInterval">
                    <cellValueFactory>
                        <PropertyValueFactory property="interval" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <Label fx:id="statusLabel" prefWidth="800.0" style="-fx-border-color: #AAAAAA; -fx-border-width: 2.00; -fx-border-style: solid; " />
    </bottom>
    <stylesheets>
        <URL value="@css/Main.css" />
    </stylesheets>
</BorderPane>
